<%- include("../partials/header") %> 

<div class="container">
    <h1 class="display-4 text-center mt-3" style="color: white;">Add a new Post</h1>
    <div class="row">
        <div style="width: 30%; margin: 40px auto;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <select multiple name="tags"  class="selectpicker" data-live-search="true" data-size="5" data-width="100%" title="Add Tag">
                        <% tags.forEach(function(tag){ %>
                        <option value="<%= tag %>"><%= tag %></option>
                        <% }); %>
                    </select>
                </div>
                <%= typeof msg != 'undefined' ? msg : '' %>
                <div class="form-group">
                    <input class="form-control-file" type="file" name="image" placeholder="Upload image">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="description" placeholder="Add Description" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
    
</div>

<%- include("../partials/footer") %> 